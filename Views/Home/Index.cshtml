@{
    ViewData["Title"] = "Home Page";
}

@model BowlerListViewModel


<div class="text-center">
    <h1 class="display-4">
        Bowler Contacts @if (Model.CurrentTeam != null)
        {
            @:-  @Model.CurrentTeam


        }
    </h1>

    <form>
        <div class="form-group">
            <label for="team">Filter by team</label>
            <select name="team" id="team">
                @foreach (Team t in ViewBag.Teams)
                {
                    if (t.TeamName == Model.CurrentTeam)
                    {
                        <option selected> @t.TeamName</option>
                    }
                    else
                    {
                        <option> @t.TeamName</option>
                    }

                }
            </select>
            <button type="submit" class="btn btn-sm btn-primary">Filter</button>
        </div>

    </form>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Bowler ID</th>
                <th scope="col">Last Name</th>
                <th scope="col">First Name</th>
                <th scope="col">Middle Name</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Team Name</th>

            </tr>
        </thead>
        <tbody>

            @foreach (Bowler b in Model.bowlers)
            {
                <tr>
                    <th scope="row">@b.BowlerId</th>
                    <td>@b.BowlerLastName</td>
                    <td>@b.BowlerFirstName</td>
                    <td>@b.BowlerMiddleInit</td>
                    <td>@b.BowlerAddress</td>
                    <td>@b.BowlerCity</td>
                    <td>@b.BowlerState</td>
                    <td>@b.BowlerZip</td>
                    <td>@b.BowlerPhoneNumber</td>
                    <td>@b.Team.TeamName</td>


                </tr>
            }
        </tbody>
    </table>
    <div class="fixed-bottom w-100 bg-dark align-items-center">
        <div class="pagination p-1" style="display:inline-flex" page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn mr-3" page-class-selected="bg-primary text-white" page-class-normal="bg-light" page-url-team="@Model.CurrentTeam">

        </div>
    </div>
</div>
